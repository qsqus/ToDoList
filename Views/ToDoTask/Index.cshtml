@model List<ToDoTask>

<div class="pt-3 pb-3">
    <a onclick="showPopUp('@Url.Action("CreateOrEdit","ToDoTask",null,Context.Request.Scheme)','New Task')" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> New Task</a>
</div>

<div class="modal fade" id="modalForm" tabindex="-1"aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header pb-0">
                <h2 class="modal-title"></h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" id="taskListContainer">
        @await Html.PartialAsync("_DisplayTaskList", Model)
    </div>
</div>
